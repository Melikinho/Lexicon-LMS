@model IEnumerable<ActivityListViewModel>



<h2>Activities</h2>

@if (User.IsInRole("Teacher"))
{
    @if (Model.Any())
    {

        <a asp-action="Create" asp-controller="Activities" asp-route-id="@Model.First().ModuleId">Add Activity</a>
    }

}

<table class="table  table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityTypeActivityTypeName)
            </th>
            <th>Documents</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityTypeActivityTypeName)
            </td>
            <td>
                    <form enctype="multipart/form-data" asp-action="FileUpload" method="post">
                        <input type="hidden" asp-for="@item.Id">
                        <div class="form-group">
                            <input asp-for="@item.UploadedFile" type="file" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" value="Upload" />
                        </div>
                    </form>
            </td>


            <td>
                    @foreach (var document in item.Documents)
                    {
                        <a href="">@document.DocumentName</a>

                    }
            </td>
                
            @*<td>
              <div class="col-sm-4 ">
                        <a class="btn btn-success" asp-controller="Documents" asp-action="UploadFile" asp-route-id="@item.Id">
                <span>
                                <i class="bi bi-upload" src="~/wwwroot/upload.svg"></i>
                </span>    
                            </a>
                        </div>
            </td>*@
        </tr>
}
    </tbody>
</table>





















