           <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.Description)
        </dd>
    </dl>
    <div>
    <a asp-action="Edit" asp-route-id="@item?.Id">Edit</a> 
</div>
          
</div>
 
      </div> ij++;}  
    </div>    
    </div>
 
             


